@import "../../common/vendor.wxss";

#index {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  background-color: #fff;
}
#index .index-tabs {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #dcdfe6;
  box-shadow: 0 2rpx 6rpx 0 rgba(0,0,0,0.12), 0 0 6rpx 0 rgba(0,0,0,0.04);
  backgroun-color: #fff;
}
#index .index-tabs .tabs-item {
  position: relative;
  color: #353535;
  font-size: 28rpx;
  padding: 16rpx 0;
  margin: 0 60rpx;
}
#index .index-tabs .tabs-item.active {
  color: #0084ff;
}
#index .index-tabs .tabs-item.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  border-radius: 10rpx;
  background-color: #0084ff;
}
#index .index-swiper {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding-top: 100rpx;
}
#index .index-swiper .swiper-item {
  overflow: auto;
}
.theme-list .list-item {
  box-sizing: border-box;
  position: relative;
  margin: 30rpx 32rpx;
  border: 2rpx solid #ebeef5;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 24rpx 0 rgba(0,0,0,0.1);
  overflow: hidden;
}
.theme-list .list-item .item-container {
  position: relative;
  width: 100%;
  height: 320rpx;
  background-color: #ddd;
  border-radius: 10rpx 10rpx 0 0;
  overflow: hidden;
}
.theme-list .list-item .item-container .item-image {
  display: block;
  width: 100%;
}
.theme-list .list-item .item-container .item-image ._img {
  display: block;
  width: 100%;
}
.theme-list .list-item .item-text {
  padding: 16rpx;
}
.theme-list .list-item .item-text .item-title {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #000;
  font-size: 28rpx;
}
.theme-list .list-item .item-text .item-subTitle {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #353535;
  font-size: 26rpx;
}