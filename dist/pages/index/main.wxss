
#index {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  background-color: #fff;
}
#index .index-tabs {
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #dcdfe6;
  box-shadow: 0 2rpx 6rpx 0 rgba(0,0,0,0.12), 0 0 6rpx 0 rgba(0,0,0,0.04);
  backgroun-color: #fff;
}
#index .index-tabs .tabs-item {
  position: relative;
  color: #353535;
  font-size: 28rpx;
  padding: 16rpx 0;
  margin: 0 60rpx;
}
#index .index-tabs .tabs-item.active {
  color: #0084ff;
}
#index .index-tabs .tabs-item.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  border-radius: 10rpx;
  background-color: #0084ff;
}
#index .index-swiper {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding-top: 100rpx;
}
#index .index-swiper .swiper-item {
  overflow: auto;
}
.article-list .list-date {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  width: 40%;
  height: 56rpx;
  margin-top: 30rpx;
  border-radius: 100rpx;
  background-color: #0084ff;
}
.article-list .list-item {
  position: relative;
  padding: 0 32rpx;
  margin: 30rpx 0;
}
.article-list .list-item .item-container.images {
  display: flex;
}
.article-list .list-item .item-container.images .item-title {
  width: 67%;
  color: #000;
  font-size: 34rpx;
  padding-right: 30rpx;
  margin-bottom: 30rpx;
  -webkit-line-clamp: 3;
  text-overflow: ellipsis;
  overflow: hidden;
}
.article-list .list-item .item-container.images .item-images {
  width: 33%;
  max-height: 160rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.article-list .list-item .item-container.images .item-images ._img {
  display: block;
  width: 100%;
}
.theme-list .list-item {
  position: relative;
  padding: 0 32rpx;
  margin: 30rpx 0;
}
.theme-list .list-item .item-container {
  position: relative;
  width: 100%;
  height: 320rpx;
  border-radius: 10rpx;
  background-color: #888;
  overflow: hidden;
}
.theme-list .list-item .item-container .item-image {
  display: block;
  width: 100%;
}
.theme-list .list-item .item-container .item-image ._img {
  display: block;
  width: 100%;
}
.theme-list .list-item .item-container .item-text {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  color: #fff;
  font-weight: bold;
  text-shadow: 2rpx 2rpx 48rpx rgba(0,0,0,0.9);
  padding: 16rpx 30rpx;
}
.theme-list .list-item .item-container .item-text .item-title {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 34rpx;
}
.theme-list .list-item .item-container .item-text .item-subTitle {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 28rpx;
}