
.article-list .list-date {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  width: 40%;
  height: 56rpx;
  margin-top: 30rpx;
  border-radius: 100rpx;
  background-color: #0084ff;
}
.article-list .list-item {
  box-sizing: border-box;
  position: relative;
  padding: 30rpx 0;
  margin: 0 32rpx;
  border-bottom: 2rpx solid #f4f4f4;
}
.article-list .list-item .item-container .item-title {
  color: #000;
  font-size: 34rpx;
  -webkit-line-clamp: 3;
  text-overflow: ellipsis;
  overflow: hidden;
}
.article-list .list-item .item-container.images {
  display: flex;
  align-items: center;
}
.article-list .list-item .item-container.images .item-title {
  width: 67%;
  padding-right: 30rpx;
}
.article-list .list-item .item-container.images .item-images {
  width: 33%;
  height: 156rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.article-list .list-item .item-container.images .item-images ._img {
  display: block;
  width: 100%;
}
.article-list .list-item .item-container.text {
  width: 100%;
}